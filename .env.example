# ============================================
# Appwrite Configuration
# ============================================
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your_project_id_here
APPWRITE_API_KEY=your_api_key_here
APPWRITE_DATABASE_ID=egygo_database

# ============================================
# External APIs
# ============================================

# OpenAI API (للمساعد الذكي)
# احصل على key من: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Maps API (للتتبع GPS)
# احصل على key من: https://console.cloud.google.com/
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Exchange Rate API (مجاني - لا يحتاج key)
# يستخدم: https://api.exchangerate-api.com/v4/latest/EGP

# ============================================
# Optional: SMS & WhatsApp (اختياري)
# ============================================

# Twilio (للـ SMS)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Business API
# WHATSAPP_PHONE_ID=your-phone-id
# WHATSAPP_ACCESS_TOKEN=your-access-token

# ============================================
# Authentication (in production, use JWT secret)
# ============================================
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# ============================================
# Server Configuration
# ============================================
PORT=8080
WEBSOCKET_PORT=8081
NODE_ENV="production"
FRONTEND_URL=http://localhost:3000

# ============================================
# Vendoor Scraper (اختياري)
# ============================================
VENDOOR_EMAIL=your-email@example.com
VENDOOR_PASSWORD=your-password

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@yoursite.com"

# Payment Configuration (if using Stripe)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# File Upload (if using cloud storage)
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# Admin Configuration
ADMIN_EMAIL="admin@yoursite.com"
SUPER_ADMIN_EMAIL="superadmin@yoursite.com"

# API Configuration
API_BASE_URL="https://yoursite.com/api"
CLIENT_BASE_URL="https://yoursite.com"

# Security
CORS_ORIGIN="https://yoursite.com"
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Analytics (optional)
GOOGLE_ANALYTICS_ID=""
FACEBOOK_PIXEL_ID=""
