# Database Configuration
DATABASE_URL="postgres://username:password@host:port/database?sslmode=require"

# Authentication (in production, use JWT secret)
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=8080
NODE_ENV="production"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@yoursite.com"

# Payment Configuration (if using Stripe)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# File Upload (if using cloud storage)
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# Admin Configuration
ADMIN_EMAIL="admin@yoursite.com"
SUPER_ADMIN_EMAIL="superadmin@yoursite.com"

# API Configuration
API_BASE_URL="https://yoursite.com/api"
CLIENT_BASE_URL="https://yoursite.com"

# Security
CORS_ORIGIN="https://yoursite.com"
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Analytics (optional)
GOOGLE_ANALYTICS_ID=""
FACEBOOK_PIXEL_ID=""
